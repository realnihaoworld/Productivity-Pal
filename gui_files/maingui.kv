#: import colormap kivy.utils.colormap
# position goes to bottom left corner

<MainGUI>
    # background
    # box is 800x600 pixels
    canvas.before:
        Color:
            rgba: app.COLOR
        Rectangle:
            size: self.size
            pos: self.pos

<TitleBox>
    Label:
        id: title_frame
        text: "TITLE OF PROJECT"
        pos: root.size[0] * 1 / 100, root.size[1] * 83 / 100
        size: root.size[0] * 60 / 100, root.size[1] * 16 / 100

        halign: "center"
        valign: "center"
        color: "black"
        bold: True
        text_size: self.size
        font_size: self.size[0] / 10 # number of letters in phrase

        canvas.before:
            Color:
                rgba: app.ACCENT_COLOR
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: (20, 20), (10, 10), (20, 20), (10, 10)

<SettingBox>
    Label:
        id: setting_frame
        text: "Settings"
        pos: root.size[0] * 62 / 100, root.size[1] * 19 / 100
        size: root.size[0] * 37 / 100, root.size[1] * 80 / 100

        halign: "center"
        valign: "top"

        color: "black"
        padding_y: 10
        underline: True
        text_size: self.size
        font_size: self.size[0] / 10 # number of letters in phrase

        canvas.before:
            Color:
                rgba: app.ACCENT_COLOR
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: (10,10), (10,10), (10,10), (10,10)

<SettingButtons>
    Button:
        pos: root.size[0] * 68 / 100, root.size[1] * 78 / 100
        size: root.size[0] * 25 / 100, root.size[1] * 8 / 100

        font_size: self.size[0] / 10
        text_size: self.size
        halign: "center"
        valign: "center"

        text: "Positive Message"
        color: "white"

    Label:
        pos: root.size[0] * 65 / 100, root.size[1] * 68 / 100
        size: root.size[0] * 25 / 100, root.size[1] * 8 / 100

        font_size: self.size[0] / 12
        text_size: self.size
        halign: "center"
        valign: "center"

        text: "Positive Message Delay:"
        color: "black"

    TextInput:
        pos: root.size[0] * 89 / 100, root.size[1] * 69 / 100
        size: root.size[0] * 7 / 100, root.size[1] * 5 / 100

    Button:
        pos: root.size[0] * 68 / 100, root.size[1] * 52 / 100
        size: root.size[0] * 25 / 100, root.size[1] * 8 / 100

        font_size: self.size[0] / 10
        text_size: self.size
        halign: "center"
        valign: "center"

        text: "Negative Message"
        color: "white"

    Label:
        pos: root.size[0] * 65 / 100, root.size[1] * 42 / 100
        size: root.size[0] * 25 / 100, root.size[1] * 8 / 100

        font_size: self.size[0] / 12
        text_size: self.size
        halign: "center"
        valign: "center"

        text: "Negative Message Delay:"
        color: "black"

    TextInput:
        pos: root.size[0] * 89 / 100, root.size[1] * 43 / 100
        size: root.size[0] * 7 / 100, root.size[1] * 5 / 100

    Button:
        # color will change when clicked
        pos: root.size[0] * 68 / 100, root.size[1] * 27 / 100
        size: root.size[0] * 25 / 100, root.size[1] * 8 / 100

        font_size: self.size[0] / 10
        text_size: self.size
        halign: "center"
        valign: "center"

        text: "ON/OFF"
        color: "white"
        on_press: app.dock_toggle()



<WebBox>
    # Webactivity Box
    Label:
        id: web_frame    TextInput:
        pos: root.size[0] * 89 / 100, root.size[1] * 71 / 100
        size: root.size[0] * 7 / 100, root.size[1] * 5 / 100

        text: "Website List"
        pos: root.size[0] * 1 / 100, root.size[1] * 1 / 100
        size: root.size[0] * 60 / 100, root.size[1] * 81 / 100

        halign: "center"
        valign: "top"

        color: "black"
        padding_y: 10
        underline: True
        text_size: self.size
        font_size: self.size[0] / 20 # number of letters in phrase

        canvas.before:
            Color:
                rgba: app.ACCENT_COLOR

            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: (10,10), (10,10), (10,10), (10,10)

<StatusBox>
    Label:
        id: status_frame
        text: "STATUS: {status}"
        pos: root.size[0] * 62 / 100, root.size[1] * 1 / 100
        size: root.size[0] * 37 / 100, root.size[1] * 17 / 100

        color: "black"
        bold: True

        font_size: self.size[0] / 10 # number of letters in phrase

        canvas.before:
            Color:
                rgba: app.status_color
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: (10,10), (10,10), (10,10), (10,10)